@model IEnumerable<Entities.Task>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New" , "Create")
</p>

<div class="row">
    <div class="col-xs-12 col-md-3">
        <div class="row">
            <div class="col-xs-12">
                <h3>TO DO</h3>
            </div>
        </div>
        @foreach(var item in Model)
        {
            if(item.Status.ToString() == "ToDo")
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h3 class="panel-title">@item.Name</h3>
                            </div>
                            <div class="panel-body">
                                @item.Description
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="col-xs-12 col-md-3">
        <div class="row">
            <div class="col-xs-12">
                <h3>In Progress</h3>
            </div>
        </div>
        @foreach(var item in Model)
        {
            if(item.Status.ToString() == "InProgress")
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h3 class="panel-title">@item.Name</h3>
                            </div>
                            <div class="panel-body">
                                @item.Description
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>


    <div class="col-xs-12 col-md-3">
        <div class="row">
            <div class="col-xs-12">
                <h3>InTesting</h3>
            </div>
        </div>
        @foreach(var item in Model)
        {
            if(item.Status.ToString() == "InTesting")
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h3 class="panel-title">@item.Name</h3>
                            </div>
                            <div class="panel-body">
                                @item.Description
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="col-xs-12 col-md-3">
        <div class="row">
            <div class="col-xs-12">
                <h3>Done</h3>
            </div>
        </div>
        @foreach(var item in Model)
        {
            if(item.Status.ToString() == "Done")
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h3 class="panel-title">@item.Name</h3>
                            </div>
                            <div class="panel-body">
                                @item.Description
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>
